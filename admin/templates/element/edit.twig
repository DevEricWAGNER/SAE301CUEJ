                                    {% for article in articles %}
                                        <option value="{{article.id}}">{{article.article_name}}</option>                            
                                    {% endfor %}
                                </select>
                            </div>
                        <div class="form_img">
                            <img id="blah" src="{{element.img_src}}" alt="{{element.img_alt}}">
                        </div>
                    </div>
                    <input type="submit" value="Valider" class="form_input_submit" name="submit_img">
                </form>
            {% elseif element.balise == 'video' %}
