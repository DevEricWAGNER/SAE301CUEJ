{% extends "base.twig" %}

{% block main %}
        {% for element in element_unique %}
            {% if element.balise != 'img' and element.balise != 'video' and element.balise != 'audio' %}
                <form action="index.php?action=update&element_id={{element_id}}" method="post" enctype="multipart/form-data">
                    <input type="text" name="content" id="content" class="form_input" value="{{element.content}}">
                    <input type="text" name="classSS" id="classCSS" class="form_input" value="{{element.classCSS}}">
                    <input type="number" name="position" id="position" min="1" max="100" placeholder="Position de l'element" value="{{element.position}}" class="form_input">
                    <select name="article" class="form_input">
                        <option value="{{element.article}}">{{element.article_name}}</option>
                        <option>▬▬▬ Liste des articles disponnibles ▬▬▬</option>
                        {% for article in articles %}
                            <option value="{{article.id}}">{{article.article_name}}</option>                            
                        {% endfor %}
                    </select>
                    <input type="submit" name="submit_text" value="Valider" class="form_input_submit">
                </form>
            {% elseif element.balise == 'img' %}
                <form action="index.php?action=update&element_id={{element_id}}" method="post" enctype="multipart/form-data">
